<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
 "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>

  <validator type="requiredstring">
    <param name="fieldname">producte.nom</param>
     <message key="error.nom"/>
 </validator>
 

 <validator type="requiredstring">
    <param name="fieldname">producte.descripcio</param>
     <message key="error.desc"/>
 </validator>
 
 
 
   <field name="producte.data">
      <field-validator type="required">
          <message key="error.data"/>
      </field-validator>
  </field>
 
  <validator type="int">
         <param name="fieldName">producte.preu</param>
         <param name="min">1</param>
         <param name="max">1000</param>
         <message key="error.int"/>
     </validator>
     
       <validator type="int">
         <param name="fieldName">producte.disponibilitat</param>
         <param name="min">1</param>
         <param name="max">1000</param>
         <message key="error.int"/>
     </validator>
 
 
 

</validators>